<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>be.timonc</groupId>
        <artifactId>CustomEnchantments</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>custom-enchantments-dist</artifactId>
    <version>${customenchants.version}</version>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <final.name>CustomEnchants-${project.version}</final.name>
        <test.server.dir>C:/Users/loepi/Dropbox/TIMON/Programming/Test Servers/CustomEnchantsTestServer
        </test.server.dir>
        <test.server.version>1_21_5</test.server.version>
    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <finalName>${final.name}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>copy-to-release-folder</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <copy file="${project.build.directory}/${final.name}.jar"
                                      todir=""/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>../core/src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

    </build>

    <profiles>
        <profile>
            <id>development</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>3.1.0</version>
                        <executions>
                            <execution>
                                <id>copy-shaded-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <copy file="${project.build.directory}/${final.name}.jar"
                                              todir="${test.server.dir}/plugins"/>

                                        <delete dir="${test.server.dir}/plugins/CustomEnchants"/>

                                        <exec executable="C:/Tools/mcrcon.exe">
                                            <arg value="-p"/>
                                            <arg value="timonc"/>
                                            <arg value="reload confirm"/>
                                        </exec>

                                        <!--<exec dir="${test.server.dir}" executable="cmd">
                                            <arg value="/c"/>
                                            <arg value="start &quot;&quot; cmd /c java -Xmx1G -jar server_${test.server.version}.jar nogui"/>
                                        </exec>!-->
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>be.timonc</groupId>
            <artifactId>custom-enchantments-core</artifactId>
            <version>${customenchants.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>be.timonc</groupId>
            <artifactId>custom-enchantments-spigot-1.21.1</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>be.timonc</groupId>
            <artifactId>custom-enchantments-spigot-1.21.3</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>be.timonc</groupId>
            <artifactId>custom-enchantments-spigot-1.21.4</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>be.timonc</groupId>
            <artifactId>custom-enchantments-spigot-1.21.5</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>